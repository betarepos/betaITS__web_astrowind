---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Content from '~/components/widgets/Content.astro';

import { headerData } from '~/data';
import Pricing from '~/components/widgets/Pricing.astro';

const meta = {
	title: 'Managed Endpoint',
};

const pricing = [
	{
		name: 'on Demand',
		price: 'Free',
		popular: false,
		features: ['Helpdesk', 'Knowledgebase'],
		button: {
			text: 'Get Started',
			link: '/',
		},
	},
	{
		name: 'Pro-Active',
		price: {
			monthly: 'ab 16 €',
			annual: '$16',
			discount: '10%',
			original: '$24',
		},
		popular: true,
		features: ['on Demand', 'Reaktionszeit <2 Std.', 'Antivirus', 'Monitoring', 'Reporting', 'Patchmanagement'],
		button: {
			text: 'Get Started',
			link: '#',
		},
	},
	{
		name: 'Managed',
		price: 'ab 35 €',
		popular: false,
		features: ['Pro-Active', 'Service Flat', 'Prio Helpdesk', 'Softwareverteilung'],
		button: {
			text: 'Contact us',
			link: '/contact',
		},
	},
];
---

<Layout {meta}>
	<Fragment slot="header">
		<Header {...headerData} isSticky showToggleTheme />
	</Fragment>

	<!-- Hero2 Widget ******************* -->

	<Hero2 image={{ src: import('~/assets/images/fly-d-C5pXRFEjq3w-unsplash.jpg'), alt: 'Notebook mit Schloss' }}>
		<Fragment slot="title">
			<span class="font-gothic">Managed Endpoint</span>
		</Fragment>

		<Fragment slot="subtitle">
			<span class="hidden sm:inline"
				>Unsere Managed Endpoint Lösung bringt ruhe in den täglichen Betrieb ihrer PCs und Notebooks. Monitoring,
				Softwareinventory, Patchmanagement und eine gemanagte IT-Security-Lösung inklusive.
			</span>
		</Fragment>
	</Hero2>

	<!-- Content Widget **************** -->

	<Content
		isReversed
		items={[
			{
